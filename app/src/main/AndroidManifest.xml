<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gmail.speedtictactoe">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_speedtictactoe_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_speedtictactoe_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".PlayGrid" android:screenOrientation="locked">

        </activity>
        <activity android:name=".MainActivity" android:screenOrientation="locked">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Popup"
            android:theme="@style/AppTheme.PopupTheme">
        </activity>
    </application>

</manifest>
